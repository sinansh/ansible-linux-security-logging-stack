# Managed by Ansible (roles/auditd).
#
# Log file path (Critical for rsyslog imfile)
log_file = /var/log/audit/audit.log

# Log format
log_format = ENRICHED

# Maximum log file size in MiB
max_log_file = 6

# Number of rotated logs
num_logs = 4

# Action to take when max_log_file is reached
max_log_file_action = ROTATE

# Action to take when disk space is critically low
disk_error_action = SINGLE

# Warn when free space (MiB) drops below this; must be larger than admin_space_left
# Typical safe defaults: warn at 75 MiB, escalate at 50 MiB
space_left = 75
admin_space_left = 50

# Actions to take when thresholds are crossed
# Options: SYSLOG, SUSPEND, SINGLE, ROTATE, IGNORE (see auditd.conf manpage)
space_left_action = SYSLOG
admin_space_left_action = SUSPEND

